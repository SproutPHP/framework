<!DOCTYPE html>
<html lang="en" hx-boost="true" data-framework="SproutPHP" data-htmx="true" data-theme="dark">
	<head>
		<meta charset="UTF-8">
		<meta name="htmx-powered-by" content="SproutPHP">
		<title>
			{% block title %}
				{{ config('app.name', 'SproutPHP') }}
			{% endblock %}
		</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="{{ assets('css/sprout.min.css') }}">
		<script src="{{ assets('js/sprout.min.js') }}"></script>
	</head>
	<body style="min-height:100vh;display:flex;flex-direction:column;">
		<main class="container" style="flex:1 0 auto;">
			{% include 'components/navbar.twig' %}
			<div id="main-content">
				{% block content %}
					{% if content is defined %}
						{{ content|raw }}
					{% endif %}
				{% endblock %}
			</div>
		</main>

		{% if config('app.env', 'local') == 'local' %}
			<div style="z-index:9999;position:fixed;bottom:75px;right:10px;background:#eef;border:1px solid #ccd;padding:0.5rem;font-family:monospace;font-size:0.8rem;border-radius:4px;">
